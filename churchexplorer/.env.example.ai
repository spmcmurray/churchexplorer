# Church Explorer Environment Variables

# Firebase Configuration (already set up)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
REACT_APP_FIREBASE_PROJECT_ID=your_firebase_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_firebase_app_id

# AI Lesson Creator Configuration
# To enable AI lesson generation, you'll need an OpenAI API key
# Sign up at https://platform.openai.com/ and create an API key
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Alternative AI API endpoints (if using different provider)
# REACT_APP_AI_API_ENDPOINT=https://api.openai.com/v1/chat/completions

# Development settings
REACT_APP_ENVIRONMENT=development