# EmailJS Configuration
# Get these values from https://www.emailjs.com/ after signing up
# See EMAIL_SETUP_GUIDE.md for detailed instructions

REACT_APP_EMAILJS_SERVICE_ID=your_service_id_here
REACT_APP_EMAILJS_TEMPLATE_ID=your_template_id_here
REACT_APP_EMAILJS_PUBLIC_KEY=your_public_key_here

# Optional: Set to 'production' to enable real email sending
# Leave as 'demo' to run in demo mode (console logging only)
REACT_APP_EMAIL_MODE=demo

# Firebase Configuration
# Get these values from your Firebase Console:
# 1. Go to https://console.firebase.google.com/
# 2. Select your project (or create a new one)
# 3. Click the gear icon > Project settings
# 4. Under "Your apps", select your web app or create one
# 5. Copy the config values from the Firebase SDK snippet

REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
