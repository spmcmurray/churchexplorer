rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - authenticated users can read all profiles (for leaderboard)
    // but can only write their own
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      
      // User progress subcollection
      match /progress/{progressId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // AI generated paths subcollection
      match /aiPaths/{pathId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // AI path progress subcollection
      match /aiPathProgress/{progressId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // Leaderboard collection - everyone can read, only owners can write their own
    match /leaderboard/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
