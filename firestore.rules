rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - authenticated users can read all profiles (for leaderboard)
    // but can only write their own
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      
      // User progress subcollection - readable by all authenticated users for leaderboard
      match /progress/{progressId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      
      // Subscription subcollection - users can read their own subscription
      match /subscription/{subscriptionId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // AI generated paths subcollection (OLD LOCATION - for backward compatibility)
      match /aiPaths/{pathId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // Path references subcollection (NEW: lightweight references to community paths)
      match /pathReferences/{pathId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // AI path progress subcollection
      match /aiPathProgress/{progressId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // Review schedule subcollection - for spaced repetition
      match /reviewSchedule/{lessonKey} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // Leaderboard collection - everyone can read, only owners can write their own
    match /leaderboard/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // AI Paths collection (global) - for community sharing
    match /aiPaths/{pathId} {
      // Allow read if path is public OR if user owns it
      allow read: if isAuthenticated() && 
        (resource == null || resource.data.isPublic == true || resource.data.userId == request.auth.uid);
      // Allow create if authenticated and user sets themselves as owner
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update/delete only if user owns the path
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Path Ratings collection - for rating AI paths
    match /pathRatings/{ratingId} {
      // Anyone can read ratings for public paths
      allow read: if isAuthenticated();
      // Users can create/update their own ratings (ratingId format: userId_pathId)
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid &&
        ratingId.matches(request.auth.uid + '_.*');
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      // Users can delete their own ratings
      allow delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
